<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#f5f5fd">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="710dp"
        android:background="#f3f3fb"
        android:elevation="10dp"
        android:padding="10dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="-1dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="251dp"
            android:layout_height="104dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:src="@drawable/a"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="250dp"
            android:layout_height="41dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="OPC UA CLIENT"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="333dp"
            android:layout_height="47dp"
            android:fontFamily="@font/RubikLight"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:text="CONNECT TO SESSION"
            android:textSize="29dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <!-- trebuie editat asta -->

        <TextView
            android:id="@+id/textView"
            android:layout_width="699dp"
            android:layout_height="28dp"
            android:layout_marginTop="28dp"
            android:text="Session Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="699dp"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <!-- trebuie editat asta -->

        <TextView
            android:id="@+id/textView1"
            android:layout_width="699dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:text="Endpoint URL."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

        <EditText
            android:id="@+id/editTextTextPersonName1"
            android:layout_width="699dp"
            android:layout_height="28dp"
            android:background="@drawable/rectangle"
            android:ems="10"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1" />

        <!-- trebuie editat asta -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="699dp"
            android:layout_height="28dp"
            android:text=" Security Policy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName1" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="699dp"
            android:layout_height="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/button3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#3c3b3b"
        android:fontFamily="@font/PoppinsLight"
        android:text="Discover Endpoints"
        tools:layout_editor_absoluteX="269dp"
        tools:layout_editor_absoluteY="752dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#e85050"
        android:fontFamily="@font/RubikLight"
        android:text="Connect"
        tools:layout_editor_absoluteX="272dp"
        tools:layout_editor_absoluteY="710dp" />
</androidx.constraintlayout.widget.ConstraintLayout>